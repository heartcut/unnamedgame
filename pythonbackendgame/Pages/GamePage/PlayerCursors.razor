@if (MDM.MyPlayerNumber != 1)
{
    <img src="Assets/bcurs.png" style="position: absolute;top:@GetPlayerMouse(MDM,1,"y");left:@GetPlayerMouse(MDM,1,"x");z-index:3;">
}
@if (MDM.MyPlayerNumber != 2)
{
    <img src="Assets/rcurs.png" style="position: absolute;top:@GetPlayerMouse(MDM,2,"y");left:@GetPlayerMouse(MDM,2,"x");z-index:3;">
}
@if (MDM.MyPlayerNumber != 3)
{
    <img src="Assets/gcurs.png" style="position: absolute;top:@GetPlayerMouse(MDM,3,"y");left:@GetPlayerMouse(MDM,3,"x");z-index:3;">
}
@if (MDM.MyPlayerNumber != 4)
{
    <img src="Assets/ycurs.png" style="position: absolute;top:@GetPlayerMouse(MDM,4,"y");left:@GetPlayerMouse(MDM,4,"x");z-index:3;">
}

@code {

    [Parameter]
    public MainDataModel MDM { get; set; }

    public static string GetPlayerMouse(MainDataModel MDM, int whichplayer, string xory)
    {
        switch (whichplayer)
        {
            case 1:
                if (xory == "x")
                {
                    return ((MDM.BrowserWidth / 2) + MDM.P1Xcords).ToString() + "px";
                }
                else
                {
                    return ((MDM.BrowserHeight / 2) + MDM.P1Ycords).ToString() + "px";
                }
            case 2:
                if (xory == "x")
                {
                    return ((MDM.BrowserWidth / 2) + MDM.P2Xcords).ToString() + "px";
                }
                else
                {
                    return ((MDM.BrowserHeight / 2) + MDM.P2Ycords).ToString() + "px";
                }
            case 3:
                if (xory == "x")
                {
                    return ((MDM.BrowserWidth / 2) + MDM.P3Xcords).ToString() + "px";
                }
                else
                {
                    return ((MDM.BrowserHeight / 2) + MDM.P3Ycords).ToString() + "px";
                }
            case 4:
                if (xory == "x")
                {
                    return ((MDM.BrowserWidth / 2) + MDM.P4Xcords).ToString() + "px";
                }
                else
                {
                    return ((MDM.BrowserHeight / 2) + MDM.P4Ycords).ToString() + "px";
                }
            default:
                return "0px";
        }
    }
}