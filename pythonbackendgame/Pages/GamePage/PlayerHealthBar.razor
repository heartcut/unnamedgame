<div class="playerhealth">
    @for (int i = 0; i < 12; i++)
    {
        if (i < myhealth)
        {
            <healthbubblealive style="background-color:@playercolor;"></healthbubblealive>
        }
        else
        {
            <healthbubbledead></healthbubbledead>
        }
    }
</div>

@code {
    [Parameter]
    public int myhealth { get; set; }
    [Parameter]
    public string playercolor { get; set; }
}
